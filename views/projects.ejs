<!DOCTYPE html>
<html lang="en">
  <%- include('header', {title:'New Task'}); %>
  <body>
    <%- include('navbar') %>
    <div class="container-fluid">
      <div class="row flex-nowrap min-vh-100 h-auto">
        <%- include('sidebar') %>
        <div class="col-10 col-sm-9 col-xl-10 py-3 bg-light">
          <div class="container">
            <br />
            <div class="row mb-3">
              <div class="display-3 text-warning">Projects</div>
            </div>
            <br />
            <div class="row shadow p-3 mb-3 bg-body rounded h-100">
              <div class="lead col-12">
                <p class="text-warning">
                  To Complete
                  <a
                    href="/projects/add"
                    class="text-warning btn float-end position-relative"
                  >
                    <span class="bi bi-plus-circle "></span>
                  </a>
                </p>
              </div>
              <% if(pendingProj.length === 0) { %>
              <p class="lead fs-6">No tasks have been created</p>
              <% } else { %>
              <div class="table-responsive">
                <table class="table table-hover shadow-sm bg-body rounded">
                  <tbody>
                    <tr class="table-warning">
                      <td scope="col" class="lead fs-6">
                        Task Name <%- include('sort', {link:
                        "/projects?pendingSortBy=name", color:"text-warning"})
                        %>
                      </td>
                      <td scope="col" class="lead fs-6">
                        Description <%- include('sort', {link:
                        "/projects?pendingSortBy=description",
                        color:"text-warning"}) %>
                      </td>
                      <td scope="col" class="lead fs-6">
                        Due Date <%- include('sort', {link:
                        "/projects?pendingSortBy=due_date",
                        color:"text-warning"}) %>
                      </td>
                      <td scope="col" class="lead fs-6">
                        Progress <%- include('sort', {link:
                        "/projects?pendingSortBy=progress",
                        color:"text-warning"}) %>
                      </td>
                    </tr>

                    <% pendingProj.forEach((task) => { %>

                    <tr>
                      <td>
                        <a
                          href="/projects/<%= task.id %>"
                          class="lead fs-6 text-black text-decoration-none text-capitalize"
                          ><%= task.name %></a
                        >
                      </td>
                      <td>
                        <a
                          href="/projects/<%= task.id %>"
                          class="lead fs-6 text-black text-decoration-none text-capitalize"
                          ><%= task.description %></a
                        >
                      </td>
                      <td>
                        <a
                          href="/projects/<%= task.id %>"
                          class="lead fs-6 text-black text-decoration-none text-capitalize"
                          ><%= task.due_date %></a
                        >
                      </td>

                      <td>
                        <div class="progress">
                          <div
                            class="progress-bar bg-success lead fs-6"
                            role="progressbar"
                            style="width:<%= task.progress %>%;"
                            aria-valuenow="<%= task.progress %>"
                            aria-valuemin="0"
                            aria-valuemax="100"
                          >
                            <%= task.progress %>%
                          </div>
                        </div>
                      </td>
                    </tr>

                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% } %>
            </div>

            <div class="row shadow p-3 mb-5 bg-body rounded">
              <div class="lead col-12">
                <p class="text-success">
                  Completed
                </p>
              </div>
              <% if(completedProj.length === 0) { %>
              <p class="lead fs-6">No tasks have been created</p>
              <% } else { %>
              <div class="table-responsive">
                <table class="table table-hover shadow-sm bg-body rounded">
                  <tbody>
                    <tr class="table-success">
                      <td scope="col" class="lead fs-6">
                        Task Name <%- include('sort', {link:
                        "/projects?completedSortBy=name", color:"text-success"})
                        %>
                      </td>
                      <td scope="col" class="lead fs-6">
                        Description <%- include('sort', {link:
                        "/projects?completedSortBy=description",
                        color:"text-success"}) %>
                      </td>
                      <td scope="col" class="lead fs-6">
                        Due Date <%- include('sort', {link:
                        "/projects?completedSortBy=due_date",
                        color:"text-success"}) %>
                      </td>
                      <td scope="col" class="lead fs-6">
                        Progress <%- include('sort', {link:
                        "/projects?completedSortBy=progress",
                        color:"text-success"}) %>
                      </td>
                    </tr>
                    <% completedProj.forEach((task) => { %>
                    <tr>
                      <td>
                        <a
                          href="/projects/<%= task.id %>"
                          class="lead fs-6 text-black text-decoration-none text-capitalize"
                          ><%= task.name %></a
                        >
                      </td>
                      <td>
                        <a
                          href="/projects/<%= task.id %>"
                          class="lead fs-6 text-black text-decoration-none text-capitalize"
                          ><%= task.description %></a
                        >
                      </td>
                      <td>
                        <a
                          href="/projects/<%= task.id %>"
                          class=" lead fs-6 text-black text-decoration-none text-capitalize"
                          ><%= task.due_date %></a
                        >
                      </td>
                      <td>
                        <div class="progress">
                          <div
                            class="progress-bar bg-success lead fs-6"
                            role="progressbar"
                            style="width:<%= task.progress %>%;"
                            aria-valuenow="<%= task.progress %>"
                            aria-valuemin="0"
                            aria-valuemax="100"
                          >
                            <%= task.progress %>%
                          </div>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('footer') %>
  </body>
</html>
